// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Admin Users
model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String   // hashed password
  name      String
  role      String   @default("admin") // admin, super_admin
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Tour Packages
model TourPackage {
  schedules         TripSchedule[]
  id                String   @id @default(uuid())
  slug              String   @unique
  title             String
  titleEn           String?
  description       String   @db.Text
  descriptionEn     String?  @db.Text
  type              String   // open_trip, private_trip
  category          String   // domestik, internasional
  destination       String
  destinationEn     String?
  duration          String   // e.g., "5 Hari 4 Malam"
  durationEn        String?
  image             String
  price             Int
  priceDiscount     Int?
  minPax            Int      @default(1)
  maxPax            Int?
  rating            Float    @default(0)
  reviewCount       Int      @default(0)
  badge             String?  // best_seller, hot_deal, premium, etc.
  highlights        String[] // Array of highlights
  highlightsEn      String[]
  includes          String[] // Paket termasuk
  includesEn        String[]
  excludes          String[] // Paket tidak termasuk
  excludesEn        String[]
  itinerary         Json?    // Detailed itinerary
  terms             Json?    // Syarat & ketentuan
  status            String   @default("active") // active, inactive, draft
  featured          Boolean  @default(false)
  hasDetail         Boolean  @default(false)
  whatsappText      String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([type, category, status])
  @@index([slug])
}

// Trip Schedules (Jadwal Keberangkatan)
model TripSchedule {
  id              String   @id @default(uuid())
  packageId       String
  package         TourPackage @relation(fields: [packageId], references: [id], onDelete: Cascade)
  departureDate   DateTime
  returnDate      DateTime?
  price           Int?     // Override harga jika berbeda dari paket
  quota           Int      @default(20)  // Total kuota
  bookedCount     Int      @default(0)   // Sudah terpesan
  status          String   @default("available") // available, almost_full, full, cancelled
  notes           String?  @db.Text
  notesEn         String?  @db.Text
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([packageId, departureDate])
  @@index([status])
}

// Destinations
model Destination {
  id          String   @id @default(uuid())
  slug        String   @unique
  name        String
  nameEn      String?
  country     String
  countryEn   String?
  category    String   // domestik, internasional
  image       String
  description String   @db.Text
  descriptionEn String? @db.Text
  packageCount Int     @default(0)
  featured    Boolean  @default(false)
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([category, status])
}

// Testimonials
model Testimonial {
  id          String   @id @default(uuid())
  name        String
  location    String   // e.g., "Jakarta"
  packageName String
  rating      Float    @default(5)
  comment     String   @db.Text
  commentEn   String?  @db.Text
  date        String   // e.g., "Januari 2025"
  avatar      String?
  status      String   @default("active")
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([status, featured])
}

// FAQs
model FAQ {
  id        String   @id @default(uuid())
  question  String   @db.Text
  questionEn String? @db.Text
  answer    String   @db.Text
  answerEn  String?  @db.Text
  category  String?  // general, booking, payment, etc.
  order     Int      @default(0)
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([status, order])
}

// Hero Slides
model HeroSlide {
  id        String   @id @default(uuid())
  title     String
  titleEn   String?
  subtitle  String
  subtitleEn String?
  image     String
  order     Int      @default(0)
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([status, order])
}

// Website Settings
model Setting {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String   @db.Text
  type      String   // text, number, json, boolean
  group     String?  // contact, social, general, etc.
  label     String
  labelEn   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([key])
  @@index([group])
}

// Why Choose Us (Features)
model Feature {
  id          String   @id @default(uuid())
  title       String
  titleEn     String?
  description String   @db.Text
  descriptionEn String? @db.Text
  icon        String   // icon name from lucide-react
  order       Int      @default(0)
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([status, order])
}

// Blog/Articles (optional for future)
model Article {
  id          String   @id @default(uuid())
  slug        String   @unique
  title       String
  titleEn     String?
  excerpt     String   @db.Text
  excerptEn   String?  @db.Text
  content     String   @db.Text
  contentEn   String?  @db.Text
  image       String
  category    String
  tags        String[]
  author      String
  status      String   @default("draft") // draft, published
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([status, publishedAt])
  @@index([slug])
}

// Terms and Conditions
model TermsCondition {
  id        String   @id @default(uuid())
  title     String
  titleEn   String?
  content   String[] // Array of content paragraphs
  contentEn String[]
  order     Int      @default(0)
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([status, order])
}
